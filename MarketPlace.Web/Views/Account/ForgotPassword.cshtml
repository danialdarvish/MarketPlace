@using MarketPlace.DataLayer.DTOs.Account
@model ForgotPasswordDto
@{
    ViewData["Title"] = "فراموشی کلمه عبور";
}

@section scripts
{
<partial name="_JqueryValidators" />
<partial name="_CaptchaScripts" />
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="index.html">خانه</a></li>
                        <li>بازیابی کلمه عبور</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <h2>بازیابی کلمه عبور</h2>
                    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                        <partial name="_CaptchaInput"/>
                        <p>
                            <label asp-for="Mobile">تلفن همراه<span>*</span></label>
                            <input type="text" asp-for="Mobile">
                            <span class="text-danger" asp-validation-for="Mobile"></span>
                        </p>
                        <div class="login_submit">
                            <button type="submit">بازیابی</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>
